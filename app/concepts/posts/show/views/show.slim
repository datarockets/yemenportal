.post-page
  .post-page__header
    .row
      .post-page__back-button.column.small-2.medium-2.large-2
        = link_to("‚ü∂ #{st("back")}", root_path, class: "button hollow float-right")
      .post-page__topic-card.column.small-9.medium-8.large-8
        = cell("topics/topic/cell", topic)
      .post-page__close-button.column.small-1.medium-2.large-2
        = link_to("&times;", post_link, class: "button hollow float-left")

  iframe.post-page__iframe scrolling="no" src=posts_proxy_path(post)

  javascript:
    $('iframe').iFrameResize();
